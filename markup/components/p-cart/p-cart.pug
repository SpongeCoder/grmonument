include ../title/title
include ../product-quantity/product-quantity

mixin p-cart(data)
    FORM(method="post").p-cart
        +title(pageSettings.title)

        TABLE.p-cart-table
            TR.p-cart-table__header
                TH Продукт
                TH Свойства
                TH Цена
                TH Колличество
                TH Всего
                TH
                    +fa-icon('trash-o')
            TR.p-cart-table-item
                TD.p-cart-table-item__row.p-cart-table-item__row--img
                    a(href=jv0)
                        img(src="static/img/general/trash/product1.jpg", alt="Анальная втулка для электростимуляции Little John - 9 см").p-cart-table-item__img

                TD.p-cart-table-item__row.p-cart-table-item__row--options
                    | <a href=jv0 class="p-cart-table__name">Анальная втулка для электростимуляции Little John - 9 см</a><br>
                    | <b>Размер</b>: XL<br>
                    | <b>Цвет</b>: Серебренный<br>
                    | <b>Скидка</b>: 20%
                TD.p-cart-table-item__row.p-cart-table-item__row--price 12 499 р.
                TD.p-cart-table-item__row.p-cart-table-item__row--quantity
                    +product-quantity(2)
                TD.p-cart-table-item__row.p-cart-table-item__row--price-all 24 998 р.

                TD.p-cart-table-item__row.p-cart-table-item__row--del
                    BUTTON(type="button" title="Удалить")
                        +fa-icon('trash-o')
            TR.p-cart-table-item
                TD.p-cart-table-item__row.p-cart-table-item__row--img
                    a(href=jv0)
                        img(src="static/img/general/trash/product2.jpg", alt="Анальная втулка для электростимуляции Little John - 9 см").p-cart-table-item__img

                TD.p-cart-table-item__row.p-cart-table-item__row--options
                    | <a href=jv0 class="p-cart-table__name">Анальная втулка для электростимуляции Little John - 9 см</a><br>
                    | <b>Размер</b>: XL<br>
                    | <b>Цвет</b>: Серебренный<br>
                    | <b>Скидка</b>: 20%
                TD.p-cart-table-item__row.p-cart-table-item__row--price 12 499 р.
                TD.p-cart-table-item__row.p-cart-table-item__row--quantity
                    +product-quantity(1)
                TD.p-cart-table-item__row.p-cart-table-item__row--price-all 24 998 р.

                TD.p-cart-table-item__row.p-cart-table-item__row--del
                    BUTTON(type="button" title="Удалить")
                        +fa-icon('trash-o')


        .p-cart__info
            <span>Всего</span>: 24 998 рублей

        .p-cart__footer
            A(href=jv0).p-cart-back
                +fa-icon('arrow-left')
                | Вернуться назад

            //- TODO: добавить скрытую форму для отправки
            //- данных на оформление заказа
            BUTTON(type="submit").p-cart-submit
                +fa-icon('check')
                | Оформить заказ
